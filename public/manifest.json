{
  "name": "微信网页版超级增强_blreay",
  "manifest_version": 2,
  "version": "2.1.2",
  "description": "更好用的微信网页版增强扩展，可显示未读消息列表，从聊天列表快速查看信息，更换图标，不含任何恶意广告。",
  "icons": {
    "20": "images/20.png",
    "19": "images/20.png",
    "30": "images/20.png",
    "48": "images/20.png",
    "128": "images/20.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "images/20.png",
    "default_title": "欢迎使用微信网页版扩展",
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "js": [ "chrome/wxobserve.js" ],
    "matches": [ "*://wx2.qq.com/*", "*://wx.qq.com/*" ],
    "run_at": "document_start"
  }],
  "permissions": ["tabs", 
    "https://*.qq.com/*", 
    "https://wx2.qq.com/*",
    "https://wx.qq.com/*",
    "contextMenus",
    "notifications"],
  "homepage_url": "https://github.com/blreay/web-wechat-chrome-extension",
  "web_accessible_resources": [
    "chrome/catchChatList.js",
    "chrome/activeChatItem.js",
    "chrome/getUnreadCount.js",
    "chrome/blurPage.js",
    "chrome/loginOut.js"
  ]
}
